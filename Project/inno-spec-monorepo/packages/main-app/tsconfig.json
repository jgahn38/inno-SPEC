{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "paths": {
      "@inno-spec/shared": ["../shared/src"],
      "@inno-spec/ui-lib": ["../ui-lib/src"],
      "@inno-spec/core": ["../core/src"],
      "@inno-spec/designer-app": ["../designer-app/src"],
      "@inno-spec/project-app": ["../project-app/src"],
      "@inno-spec/admin-app": ["../admin-app/src"]
    }
  },
  "include": ["src/**/*", "index.html"],
  "exclude": ["node_modules", "dist"]
}
